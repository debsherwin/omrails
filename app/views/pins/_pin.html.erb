			<p class="description">
				<%= link_to (pin.description), pin %>
			</p>
		  <p>
		    <strong>
		        Posted by <%= pin.user.name %>
		    </strong> 
		  </p>
			<p>
				<% if user_signed_in? %>
				
				<!-- <div class="fb-like" data-href="http://facebook.com" data-send="true" data-width="100" data-show-faces="false" data-font="arial" data-colorscheme="dark"></div> -->

